<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <xacro:include filename="color.urdf.xacro" />
    <xacro:include filename="inertial_macros.urdf.xacro" />

    <link name="world"></link>

    <joint name="chassis_joint" type="fixed">
        <parent link="world" />
        <child link="chassis_link" />
        <origin xyz="-0.1 0 0" />
    </joint>

    <link name="chassis_link">
        <visual>
            <origin xyz="0.21 0 0.08" />
            <geometry>
                <box size="0.42 0.22 0.16" />
            </geometry>
            <material name="red" />
        </visual>

        <collision>
            <origin xyz="0.21 0 0.08" />
            <geometry>
                <box size="0.42 0.22 0.16" />
            </geometry>
        </collision>

        <xacro_inertial_box mass="8" x="0.42" y="0.22" z="0.16">
            <origin xyz="0.21 0 0.08" rpy="0 0 0" />
        </xacro_inertial_box>

    </link>

    <joint
        name="front_left_wheel_joint" type="continuous">
        <parent link="world" />
        <child link="front_left_wheel_link" />
        <origin xyz="0.22 0.11 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />

        <ackermann_steering_controller />
        <steer_angle>0.2</steer_angle>
        <wheelbase>1.0</wheelbase>
        <track_width>0.8</track_width>
    </joint>

    <link
        name="front_left_wheel_link">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </inertial_cylinder>
    </link>

    <joint
        name="front_right_wheel_joint" type="continuous">
        <parent link="world" />
        <child link="front_right_wheel_link" />
        <origin xyz="0.22 -0.11 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1 " />

        <ackermann_steering_controller />
        <steer_angle>-1</steer_angle>
        <wheelbase>1.0</wheelbase>
        <track_width>0.8</track_width>
    </joint>

    <link
        name="front_right_wheel_link">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </inertial_cylinder>
    </link>

    <joint
        name="rear_left_wheel_joint" type="continuous">
        <parent link="world" />
        <child link="rear_left_wheel_link" />
        <origin xyz="0 0.11 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link
        name="rear_left_wheel_link">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </inertial_cylinder>
    </link>

    <joint
        name="rear_right_wheel_joint" type="continuous">
        <parent link="world" />
        <child link="rear_right_wheel_link" />
        <origin xyz="0 -0.11 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1 " />
    </joint>

    <link
        name="rear_right_wheel_link">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </inertial_cylinder>
    </link>
</robot>