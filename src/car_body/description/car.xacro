<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.1 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.21 0 0.08" />
            <geometry>
                <box size="0.42 0.22 0.16" />
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <origin xyz="0.21 0 0.08" />
            <geometry>
                <box size="0.42 0.22 0.16" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="8" x="0.42" y="0.22" z="0.16">
            <origin xyz="0.21 0 0.08" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
    </gazebo>

    <joint
        name="front_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_left_wheel" />
        <origin xyz="0.22 0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-3.1416" upper="3.1416" effort="100" velocity="3.0" />
    </joint>

    <link
        name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="front_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint
        name="front_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_right_wheel" />
        <origin xyz="0.22 -0.15 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1 " />
        <limit lower="-3.1416" upper="3.1416" effort="100" velocity="3.0" />
    </joint>

    <link
        name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="front_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint
        name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="rear_left_wheel" />
        <origin xyz="0 0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link
        name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>


    <joint
        name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="rear_right_wheel" />
        <origin xyz="0 -0.15 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1 " />
    </joint>

    <link
        name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.8" length="0.06" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>